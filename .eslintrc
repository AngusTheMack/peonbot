{
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "@babel/plugin-transform-runtime"
    ],
    "rules": {
        "prettier/prettier": "warn"
    },
    "overrides": [
        {
            "files": ["src/**/*.ts"],
            "parserOptions": {
                "project": ["./tsconfig.json"]
            }
        }
    ]
}
